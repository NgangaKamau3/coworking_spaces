# PRODUCTION ENVIRONMENT TEMPLATE
# Copy to .env and fill with actual values

# Core Security
DEBUG=False
SECRET_KEY=your-secret-key-here-50-characters-minimum
ALLOWED_HOSTS=your-domain.com,api.your-domain.com

# Database Configuration
DB_NAME=cwspaces_prod
DB_USER=cwspaces_user
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# Redis Cache
REDIS_PASSWORD=your-secure-redis-password

# Payment Gateway Integration
PAYMENT_GATEWAY_URL=https://your-spring-payment-service.com
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-api-key

# Security & Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
IOT_WEBHOOK_SECRET=your-iot-webhook-secret

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# SSL Configuration (paths inside container)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem